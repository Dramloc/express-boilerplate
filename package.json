{
  "name": "express-mongoose-template",
  "version": "1.0.0",
  "main": "./src/index.js",
  "author": "Antoine Colmard <a.colmard@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --exec \"babel-node src/index.js\"",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore \"src/**/*.spec.js\",\"src/**/*.test.js\"",
    "serve": "cross-env NODE_ENV=production node dist/index.js",
    "test": "is-ci && jest --ci || jest --watch",
    "lint": "eslint src"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@types/jest": "^26.0.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.0",
    "mongoose": "^5.9.18",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "ora": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.3",
    "is-ci": "^2.0.0",
    "jest": "^26.0.1",
    "jest-express": "^1.12.0",
    "jest-runner-eslint": "^0.9.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "prettier": {
    "printWidth": 100
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "testEnvironment": "node"
      },
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/src/**/*.js"
        ]
      }
    ]
  }
}
